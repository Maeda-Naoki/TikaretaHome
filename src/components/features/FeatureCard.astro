---
// biome-ignore lint/correctness/noUnusedImports: Icon component is used in template
import Icon from '@components/common/Icon.astro';

// biome-ignore lint/correctness/noUnusedVariables: Props interface is used by Astro
interface Props {
  icon: string;
  iconType: 'lucide' | 'emoji';
  title: string;
  description: string;
}

// biome-ignore lint/correctness/noUnusedVariables: All props are used in template
const { icon, iconType, title, description } = Astro.props;
---

<div class="p-6 bg-white rounded-card shadow-soft hover:shadow-card transition-all fade-in-up">
  <div class="mb-3">
    <Icon name={icon} type={iconType} size={32} class="text-primary-600" />
  </div>
  <h3 class="text-lg font-bold text-warm-gray-900 mb-2">{title}</h3>
  <p class="text-sm text-warm-gray-600">{description}</p>
</div>
