---
import CTAButton from '@components/common/CTAButton.astro';
import { useTranslations } from '@utils/i18n';

const t = useTranslations(Astro.currentLocale);
---

<section class="py-16 md:py-24 px-4 bg-gradient-to-b from-white to-primary-50">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-display font-bold text-warm-gray-900 mb-4 fade-in-up">
      {t.finalCTA.title}
    </h2>
    <p class="text-lg text-warm-gray-600 mb-8 fade-in-up">
      {t.finalCTA.subtitle}
    </p>
    <div class="fade-in-up">
      <CTAButton text={t.finalCTA.cta} size="lg" />
    </div>
  </div>
</section>
