---
import { useTranslations } from '@utils/i18n';

const t = useTranslations(Astro.currentLocale);
---

<section class="py-16 md:py-24 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-display font-bold text-warm-gray-900 text-center mb-12 fade-in-up">
      {t.testimonials.title}
    </h2>
    <div class="grid md:grid-cols-3 gap-8">
      {t.testimonials.items.map((item, index) => (
        <div
          class="p-6 bg-white rounded-card shadow-soft hover:shadow-card transition-all fade-in-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="text-4xl mb-4 text-center">{item.avatar}</div>
          <p class="text-warm-gray-700 mb-4 italic">"{item.comment}"</p>
          <p class="text-sm font-bold text-warm-gray-900 text-center">{item.name}</p>
        </div>
      ))}
    </div>
  </div>
</section>
