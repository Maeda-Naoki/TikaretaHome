---
import { useTranslations } from '@utils/i18n';

const t = useTranslations(Astro.currentLocale);
---

<section class="py-16 md:py-24 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-display font-bold text-warm-gray-900 text-center mb-12 fade-in-up">
      {t.howItWorks.title}
    </h2>
    <div class="grid md:grid-cols-3 gap-8">
      {t.howItWorks.steps.map((step, index) => (
        <div
          class="relative p-6 fade-in-up"
          style={`animation-delay: ${index * 150}ms`}
        >
          <div class="flex flex-col items-center text-center">
            <div class="w-16 h-16 rounded-full bg-primary-500 text-white flex items-center justify-center text-2xl font-bold mb-4">
              {step.number}
            </div>
            <h3 class="text-xl font-bold text-warm-gray-900 mb-3">{step.title}</h3>
            <p class="text-warm-gray-600">{step.description}</p>
          </div>
          {index < 2 && (
            <div class="hidden md:block absolute top-12 -right-4 text-primary-300 text-3xl">
              â†’
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
