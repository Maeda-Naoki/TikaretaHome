---
import { pricingPlans } from '@data/pricing';
import { useTranslations } from '@utils/i18n';

const t = useTranslations(Astro.currentLocale);
const locale = Astro.currentLocale ?? 'ja';
const pricingUrl = locale === 'ja' ? '/pricing' : '/en/pricing';
---

<section class="py-16 md:py-24 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12 fade-in-up">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-warm-gray-900 mb-4">
        {t.pricingSummary.title}
      </h2>
      <p class="text-lg text-warm-gray-600">{t.pricingSummary.subtitle}</p>
    </div>
    <div class="grid md:grid-cols-3 gap-6 mb-10">
      {pricingPlans.map((plan, index) => (
        <div
          class={`p-8 rounded-card ${plan.recommended ? 'bg-primary-50 border-2 border-primary-500' : 'bg-cream-50'} shadow-soft hover:shadow-card transition-all fade-in-up`}
          style={`animation-delay: ${index * 100}ms`}
        >
          {plan.recommended && (
            <div class="inline-block px-3 py-1 bg-primary-500 text-white text-sm font-bold rounded-soft mb-4">
              {t.pricing.recommended}
            </div>
          )}
          <h3 class="text-2xl font-bold text-warm-gray-900 mb-4">
            {t.pricing.plans[plan.id].name}
          </h3>
          <div class="mb-6">
            <span class="text-4xl font-bold text-warm-gray-900">
              ¥{plan.price.toLocaleString()}
            </span>
            {plan.period && (
              <span class="text-warm-gray-600">
                {plan.period === 'month' ? t.pricing.perMonth : t.pricing.perYear}
              </span>
            )}
          </div>
          {plan.savings && (
            <div class="mb-4 text-secondary-600 font-bold">
              {t.pricing.savings}
            </div>
          )}
          <ul class="space-y-2 mb-6">
            {Object.values(t.pricing.plans[plan.id].features).slice(0, 3).map((feature) => (
              <li class="flex items-start gap-2 text-sm text-warm-gray-700">
                <svg class="w-5 h-5 text-secondary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    <div class="text-center fade-in-up">
      <a
        href={pricingUrl}
        class="inline-block text-primary-600 hover:text-primary-700 font-bold border-b-2 border-primary-600 hover:border-primary-700 transition-colors"
      >
        {t.pricingSummary.cta} →
      </a>
    </div>
  </div>
</section>
