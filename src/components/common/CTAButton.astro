---
import { appUrl } from '@data/navigation';
import { useTranslations } from '@utils/i18n';

interface Props {
  text: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
}

const { text, variant = 'primary', size = 'md' } = Astro.props;
const t = useTranslations(Astro.currentLocale);

const variantClasses = {
  // WCAG 1.4.3: primary-700(#c2410c)+white = 4.79:1 ✓
  primary: 'bg-primary-700 hover:bg-primary-800 text-white shadow-soft hover:shadow-hover',
  // WCAG 1.4.3: primary-700(#c2410c) on white = 4.79:1 ✓; border 1.4.11 non-text 3:1 ✓
  secondary:
    'bg-white hover:bg-warm-gray-50 text-primary-700 border-2 border-primary-700 hover:border-primary-800',
};

const sizeClasses = {
  sm: 'py-2 px-6 text-sm',
  md: 'py-3 px-8 text-base',
  lg: 'py-4 px-10 text-lg',
};
---

<a
  href={appUrl}
  class={`inline-block font-bold rounded-button transition-all duration-300 ${variantClasses[variant]} ${sizeClasses[size]}`}
  target="_blank"
  rel="noopener noreferrer"
>
  {text}
  <span class="sr-only">{t.common.newTab}</span>
</a>
