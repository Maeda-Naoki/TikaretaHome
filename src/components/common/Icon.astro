---
// biome-ignore lint/correctness/noUnusedImports: Lucide icons are used in template
import { Icon as LucideIcon } from '@lucide/astro';

// biome-ignore lint/correctness/noUnusedVariables: Props interface is used by Astro
interface Props {
  name: string;
  type?: 'lucide' | 'emoji';
  size?: number;
  class?: string;
}

// biome-ignore lint/correctness/noUnusedVariables: All props are used in template
const { name, type = 'lucide', size = 24, class: className = '' } = Astro.props;
---

{type === 'lucide' ? (
  <LucideIcon name={name} size={size} class={className} />
) : (
  <span class={className} style={`font-size: ${size}px`}>{name}</span>
)}
