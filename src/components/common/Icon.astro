---
// biome-ignore lint/correctness/noUnusedImports: Lucide icons are used in template
import {
  TreePine,
  Compass,
  Sunrise,
  Zap,
  Footprints,
  Moon,
  Cloud,
  MapPin,
  Image,
  CloudSun,
  BarChart3,
  TrendingUp,
  Dog,
  MessageCircle,
  Target,
  Map,
  Flame,
  Save,
  Hospital,
  Sparkles,
  Search,
  Heart,
} from '@lucide/astro';

// biome-ignore lint/correctness/noUnusedVariables: Props interface is used by Astro
interface Props {
  name: string;
  type?: 'lucide' | 'emoji';
  size?: number;
  class?: string;
}

// biome-ignore lint/correctness/noUnusedVariables: All props are used in template
const { name, type = 'lucide', size = 24, class: className = '' } = Astro.props;

// Map icon names to components
const iconMap: Record<string, any> = {
  TreePine,
  Compass,
  Sunrise,
  Zap,
  Footprints,
  Moon,
  Cloud,
  MapPin,
  Image,
  CloudSun,
  BarChart3,
  TrendingUp,
  Dog,
  MessageCircle,
  Target,
  Map,
  Flame,
  Save,
  Hospital,
  Sparkles,
  Search,
  Heart,
};

const IconComponent = iconMap[name];
---

{
  type === 'lucide' && IconComponent ? (
    <IconComponent size={size} class={className} />
  ) : (
    <span class={className} style={`font-size: ${size}px`}>{name}</span>
  )
}
