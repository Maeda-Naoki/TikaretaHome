---
import { Icon as LucideIcon } from '@lucide/astro';

interface Props {
  name: string;
  type?: 'lucide' | 'emoji';
  size?: number;
  class?: string;
}

const { name, type = 'lucide', size = 24, class: className = '' } = Astro.props;
---

{type === 'lucide' ? (
  <LucideIcon name={name} size={size} class={className} />
) : (
  <span class={className} style={`font-size: ${size}px`}>{name}</span>
)}
