---
import { useTranslations } from '@utils/i18n';

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
const t = useTranslations(Astro.currentLocale);
const locale = Astro.currentLocale ?? 'ja';

// Always include Home as the first item
const homeUrl = locale === 'ja' ? '/' : '/en/';
const allItems = [{ name: t.nav.home, url: homeUrl }, ...items];
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex items-center gap-2 text-sm text-warm-gray-600">
    {
      allItems.map((item, index) => (
        <li class="flex items-center gap-2">
          {index > 0 && (
            /* WCAG 1.1.1: 装飾セパレータSVGを支援技術から隠す */
            <svg
              class="w-4 h-4 text-warm-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          )}
          {index === allItems.length - 1 ? (
            <span class="text-warm-gray-800 font-medium" aria-current="page">
              {item.name}
            </span>
          ) : (
            <a
              href={item.url}
              class="hover:text-primary-700 transition-colors"
            >
              {item.name}
            </a>
          )}
        </li>
      ))
    }
  </ol>
</nav>
