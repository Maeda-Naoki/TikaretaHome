---
import '@styles/global.css';
import Footer from '@components/common/Footer.astro';
import Header from '@components/common/Header.astro';
import SEO from '@components/common/SEO.astro';
import SkipToContent from '@components/common/SkipToContent.astro';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  noindex?: boolean;
  jsonLd?: unknown;
}

const { title, description, ogImage, noindex = false, jsonLd } = Astro.props;
const locale = Astro.currentLocale ?? 'ja';
const lang = locale === 'en' ? 'en' : 'ja';
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <SEO
      title={title}
      description={description}
      ogImage={ogImage}
      noindex={noindex}
      jsonLd={jsonLd}
    />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Rounded+Mplus+1c:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-cream-50 text-warm-gray-800 font-sans min-h-screen flex flex-col">
    <SkipToContent />
    <Header />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer />
    <script>
      // WCAG 2.3.3: prefers-reduced-motion を尊重したスクロールアニメーション
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      if (prefersReducedMotion) {
        // アニメーションなしで即座に表示（CSSの @media 対応の JS 側補完）
        document.querySelectorAll('.fade-in-up').forEach((el) => {
          el.classList.add('is-visible');
        });
      } else {
        // Scroll animation observer
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
              }
            });
          },
          { threshold: 0.1 }
        );

        document.querySelectorAll('.fade-in-up').forEach((el) => observer.observe(el));
      }
    </script>
  </body>
</html>
