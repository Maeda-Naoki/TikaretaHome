---
import FeatureHighlights from '@components/home/FeatureHighlights.astro';
import FinalCTA from '@components/home/FinalCTA.astro';
import Hero from '@components/home/Hero.astro';
import HowItWorks from '@components/home/HowItWorks.astro';
import PricingSummary from '@components/home/PricingSummary.astro';
import TypeDiagnosis from '@components/home/TypeDiagnosis.astro';
import ValueProposition from '@components/home/ValueProposition.astro';
import Layout from '@layouts/Layout.astro';
import { useTranslations } from '@utils/i18n';
import { createOrganizationLD, createSoftwareApplicationLD } from '@utils/seo';

const t = useTranslations(Astro.currentLocale);
const locale = Astro.currentLocale ?? 'en';

const jsonLd = [createSoftwareApplicationLD(locale), createOrganizationLD(locale)];
---

<Layout
  title={t.pages.home.title}
  description={t.pages.home.description}
  jsonLd={jsonLd}
>
  <Hero />
  <ValueProposition />
  <HowItWorks />
  <TypeDiagnosis />
  <FeatureHighlights />
  <PricingSummary />
  <FinalCTA />
</Layout>
